
      <% obj.each do |article| %>
        <div class="col-md-6 col-lg-4 col-xl-3 py-2">
            <div class="card h-100 shadow bg-light text-dark">
                <div class="card-body">
                    <h4 class="card-title"><%= article.title%></h4>
                      <%# <sub>By <%= article.user.username if article.user %>
                    <p class="card-text"><%= article.description.truncate(50) %></p>
                    <%= link_to "", article_path(article), class: "stretched-link m-0" %>
                </div>
                <p class="ml-3 mb-3">
                <small class="text-muted">Last updated   
                <%# <%= distance_of_time_in_words(article.updated_at, DateTime.now) %>
                <%= time_ago_in_words(article.updated_at) %> ago 
                </small><br>
                <small class="text-muted">
                Created By <%= article.user.username if article.user %>
                </small>
                </p>
            </div>
        </div>
      <% end %>
    
